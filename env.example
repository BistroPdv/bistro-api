# Configurações do Banco de Dados
DATABASE_URL="postgresql://bistro_user:bistro_password@localhost:5432/bistro_db"

# Configurações da Aplicação
NODE_ENV=production
PORT=3000

# JWT
JWT_SECRET=seu_jwt_secret_super_seguro_aqui
JWT_EXPIRES_IN=24h

# AWS S3 (para upload de arquivos)
AWS_ACCESS_KEY_ID=sua_aws_access_key
AWS_SECRET_ACCESS_KEY=sua_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=seu_bucket_name

# Redis (opcional)
REDIS_URL=redis://localhost:6379

# Configurações de Log
LOG_LEVEL=info
LOG_FORMAT=json

# Configurações de CORS
CORS_ORIGIN=http://localhost:3000,http://localhost:3001

# Configurações de Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Configurações de Upload
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/webp

# Configurações de Email (se necessário)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=seu_email@gmail.com
SMTP_PASS=sua_senha_de_app

# Configurações de Integração OMIE (se necessário)
OMIE_APP_KEY=sua_omie_app_key
OMIE_APP_SECRET=sua_omie_app_secret
